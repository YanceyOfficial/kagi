# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://kagi:secret@localhost:5432/kagi

# ─── Application ─────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ─── Encryption ──────────────────────────────────────────────────────────────
# AES-256-GCM master key — MUST be 64 hex characters (32 bytes)
# Generate with: openssl rand -hex 32
KAGI_ENCRYPTION_KEY=replace_with_64_hex_chars_generated_by_openssl_rand_hex_32

# ─── Better Auth ─────────────────────────────────────────────────────────────
# Random secret for signing sessions — generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=replace_with_random_secret
BETTER_AUTH_URL=http://localhost:3000

# ─── Keycloak SSO ────────────────────────────────────────────────────────────
# Your Keycloak server base URL (without realm path)
KEYCLOAK_URL=https://auth.example.com
# The realm configured for this application
KEYCLOAK_REALM=master
# OAuth2 client ID configured in Keycloak
KEYCLOAK_CLIENT_ID=kagi
# OAuth2 client secret from Keycloak
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# ─── AI (OpenAI) ─────────────────────────────────────────────────────────────
# Used by the AI key extraction feature
OPENAI_API_KEY=sk-...
